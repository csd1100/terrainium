{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Terrain",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "default": "https://raw.githubusercontent.com/csd1100/terrainium/main/schema/terrain-schema.json"
    },
    "name": {
      "type": "string"
    },
    "auto_apply": {
      "$ref": "#/$defs/AutoApply"
    },
    "terrain": {
      "$ref": "#/$defs/Biome"
    },
    "biomes": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/Biome"
      }
    },
    "default_biome": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "required": [
    "name",
    "auto_apply",
    "terrain",
    "biomes"
  ],
  "$defs": {
    "AutoApply": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "background": {
          "type": "boolean"
        },
        "replace": {
          "type": "boolean"
        }
      },
      "required": [
        "enabled",
        "background",
        "replace"
      ]
    },
    "Biome": {
      "type": "object",
      "properties": {
        "envs": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "aliases": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "constructors": {
          "$ref": "#/$defs/Commands"
        },
        "destructors": {
          "$ref": "#/$defs/Commands"
        }
      },
      "required": [
        "envs",
        "aliases",
        "constructors",
        "destructors"
      ]
    },
    "Commands": {
      "type": "object",
      "properties": {
        "foreground": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Command"
          }
        },
        "background": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Command"
          }
        }
      },
      "required": [
        "foreground",
        "background"
      ]
    },
    "Command": {
      "type": "object",
      "properties": {
        "exe": {
          "type": "string"
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cwd": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "exe",
        "args"
      ]
    }
  }
}